/**
 * Computes the sum of two bits.
 */

CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b 
        carry;  // Left bit of a + b

    PARTS:
    // Put you code here:
    // f(carry) = ab
    // f(sum) = ~ab + a~b

    And(a = a , b = b, out = carry);
    Not(in = a, out = nota);
    Not(in = b, out = notb);
    And(a = nota, b = b, out = sumLeft);
    And(a = a, b = notb, out = sumRight);
    Or(a = sumLeft, b = sumRight, out = sum);
}
